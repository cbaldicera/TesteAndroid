<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#eaecee">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Investimento"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblFundName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblWhatIs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblDefinition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblRiskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/riskBarArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView android:id="@+id/arrow1"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:src="@drawable/ic_down_arrow"/>
        <ImageView android:id="@+id/arrow2"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:src="@drawable/ic_down_arrow"/>
        <ImageView android:id="@+id/arrow3"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:src="@drawable/ic_down_arrow"/>
        <ImageView android:id="@+id/arrow4"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:src="@drawable/ic_down_arrow"/>
        <ImageView android:id="@+id/arrow5"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:src="@drawable/ic_down_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/riskBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <View android:id="@+id/rect1"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:background="#00ff00"
            android:visibility="visible"/>
        <View android:id="@+id/rect2"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:background="#bbff00"
            android:visibility="visible"/>
        <View android:id="@+id/rect3"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:background="#ffff00"
            android:visibility="visible"/>
        <View android:id="@+id/rect4"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:background="#ffbb00"
            android:visibility="visible"/>
        <View android:id="@+id/rect5"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:background="#ff0000"
            android:visibility="visible"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tblMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/lblTblFund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fundo"
                android:textAlignment="center"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/lblTblCDI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CDI"
                android:textAlignment="center"
                android:layout_column="2"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblTblMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No MÃªs"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lblTblFund0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lblTblCDI0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textAlignment="center"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/lblTblYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Ano"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lblTblFund1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lblTblCDI1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textAlignment="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/lblTbl12Months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 meses"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lblTblFund2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lblTblCDI2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textAlignment="center"/>

        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TableLayout
        android:id="@+id/tblInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TableLayout>

    <TableLayout
        android:id="@+id/tblDownInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TableLayout>

</LinearLayout>